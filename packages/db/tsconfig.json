{
  "compilerOptions": {
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": "./",     
    "module": "commonjs",
    "target": "ES2020",
    "paths": {
      "@packages/db/*": [
        "../../packages/db/*"
      ]
    },
  },
  "include": [
    "custom.d.ts",
    "next-env.d.ts",
    "**/*.ts",
    "**/*.js",
    "**/*.tsx",
    "**/*.json",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}